<h1> Add a New Comment To This idea </h1>

  <% @idea.comments.each do |comment| %>
  <p>
    <strong>body:</strong>
    <%= comment.body %>
  </p>
  <p>
    <strong>comment by:</strong>
    <%= comment.user.email %>
  </p>
  <p>
    <strong>date posted:</strong>
    <%= comment.created_at %>
  </p>

  <%= link_to 'Destroy',idea_comment_path(@idea, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %> 

  <div class="form-group">  
  <%= form_for [@idea, @comment] do |f| %>
    <%= f.label :body %><br>
    <%= f.text_area :body , class: "form-control" %>

    <%= f.submit "Submit Comment", class: "btn btn-default" %>
  <% end %>  </div>
